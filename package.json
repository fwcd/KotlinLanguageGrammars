{
  "name": "tree-sitter-kotlin",
  "version": "0.3.8",
  "description": "Kotlin grammar for tree-sitter",
  "repository": "github:fwcd/tree-sitter-kotlin",
  "author": "fwcd",
  "license": "MIT",
  "main": "bindings/node",
  "types": "bindings/node",
  "keywords": [
    "incremental",
    "parsing",
    "tree-sitter",
    "kotlin"
  ],
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm"
  ],
  "dependencies": {
    "node-addon-api": "^8.0.0",
    "node-gyp-build": "^4.8.1"
  },
  "devDependencies": {
    "prebuildify": "^6.0.1",
    "tree-sitter-cli": "^0.22.6"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.1"
  },
  "peerDependenciesMeta": {
    "tree-sitter": {
      "optional": true
    }
  },
  "scripts": {
    "build-wasm": "tree-sitter build --wasm",
    "generate": "tree-sitter generate --no-bindings",
    "install": "node-gyp-build",
    "parse": "tree-sitter parse",
    "playground": "tree-sitter playground",
    "prestart": "npm run build-wasm",
    "start": "npm run playground",
    "test": "node --test bindings/node/*_test.js"
  },
  "tree-sitter": [
    {
      "scope": "source.kotlin",
      "injection-regex": "^(kotlin|kt)$",
      "file-types": [
        "kt",
        "kts"
      ]
    }
  ]
}
